  margin-bottom: 5%;
  border: 1px solid white
}

.sub_item .title {
  width: 100%;
  height: 25%;
  /* background-color: whitesmoke; */
  display: flex;
  position: relative;
  top: 5%;
}
.title_text {
  font-size: 12px;
}
.desrc {
  display: flex;
}

.middle_price_text {
  font-size: 12px;
  color: red;
  margin-top: 10%;
}

.middle_month_text {
  font-size: 10px;
  color: #707070;
  margin-left: 5%;
  margin-top: 10%;
}

.middle_more {
  width: 20px;
  height: 20px;
}
.sub_item_images {
  width: 100%;
