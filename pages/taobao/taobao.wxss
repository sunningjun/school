.container {
  background-color: #f7f7f7;
}

.scroll_popular {
  width: 100%;
  height: 90%;
}
.search_icon{
  width: 15px;
  height: 15px;
  margin-top: 2%;
  margin-left: 3%
}
.search_input{
  width: 85%;
  font-size: 12px;
  margin-left: 2%;
  margin-top: 2%;
  border-right: 1px solid #f7f7f7
}

.top {
  width: 100%;
  height: 20%;
}

.swipper_view {
  width: 100%;
  height: 100%;
}

.slide-image {
  width: 100%;
  height: 100%;
}
.search{
  width: 90%;
  margin-left: 5%;
  background-color: white;
  border-radius: 5px;
  height: 60%;
  position: relative;
  top: 15%;
  display: flex
}

.nav_view {
  width: 100%;
  height: 25%;
  background-color: white;
  border-radius: 2px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-content: flex-start;
  flex-wrap: wrap;
  box-sizing: border-box;
  position: relative;
}

.sub_view {
  width: 20%;
  height: 40%;
  display: flex;
  flex-direction: column;
  margin-left: 5%;
  margin-top: 2%;
}

.text_view {
  font-size: 12px;
  text-align: center;
  width: 100%;
  height: 50%;
}

.text_view .text {
  position: relative;
  top: 40%;
}

.image_view {
  width: 100%;
  height: 50%;
  text-align: center
}

.nav_image {
  width: 30px;
  height: 30px;
}

.popular_view {
  width: 100%;
  height: 45%;
  margin-top: 2%;
  background-color: white;
}
.search_view{
  width: 100%;
  height: 10%;
}

.popular_view .title_view {
  width: 100%;
  height: 20%;
  /* position: fixed; */
}

.popular_view .title_view text {
  font-size: 14px;
  position: relative;
  left: 2%;
  top: 25%;
  font-weight: bold;
}

.content_view {
  width: 100%;
  height: 80%;
  margin-top: 2%;
}

.content_view .content_sub_view {
  width: 100%;
  height: 100%;
}

.sub_image_view {
  width: 100%;
  height: 60%;
}

.content_text_view {
  width: 100%;
  height: 40%;
  display: flex;
  flex-direction: column;
}

.tuijian_image {
  width: 95%;
  height: 100%;
  margin-left: 2%;
  border-radius: 2px;
}

.content_contact_view {
  display: flex;
}

.content_title_view {
  width: 100%;
  height: 30%;
  font-size: 14px;
  margin-left: 2%;
}

.content_contact_view {
  width: 100%;
  height: 70%;
}

.contact_text {
  width: 70%;
  height: 100%;
  font-size: 14px;
  color: #ff8040;
  margin-left: 2%;
}

.contact_button {
  width: 20%;
  height: 40%;
  font-size: 12px;
  border-radius: 2px;
  background-color: #ff8040;
  color: white;
  text-align: center;
}

.contact_button text {
  position: relative;
  top: 5%;
}
