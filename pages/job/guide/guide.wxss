.container {
  background-color: #f7f7f7;
}

.nav_view {
  width: 100%;
  height: 8%;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: center;
  box-sizing: border-box;
  position: relative;
  top: 2%;
  align-items: center
}

.sub_view {
  width: 20%;
  height: 100%;
  margin-left: 2%;
  margin-top: 2%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.image_view {
  width: 70%;
  height: 50%;
  margin-left: 25%;
  border-radius: 50%;
}

.nav_image {
  width: 25px;
  height: 25px;
  margin-left: 20%;
  margin-top: 20%;
}

.text_view {
  font-size: 12px;
  text-align: center;
  margin-left: 20%;
}

.content_view {
  width: 95%;
  height: 20%;
  position: relative;
  left: 2%;
}

.leaflet {
  width: 100%;
  height: 100%;
}

.swipper_view {
  width: 100%;
  height: 100%;
}

.footer_view {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 10%;
  background-color: white;
}

.button {
  width: 50px;
  height: 50px;
}

.footer_button {
  width: 50%;
  height: 50%;
  position: relative;
  left: 42%;
  top: 10%;
}

.search_view {
  width: 90%;
  margin-left: 5%;
  height: 5%;
  border-radius: 5px;
  background-color: white;
  display: flex;
  flex-direction: row;
}

.image_icon {
  width: 15px;
  height: 15px;
  position: relative;
  left: 2%;
  top: 20%;
}

.input_view {
  font-size: 12px;
  position: relative;
  left: 5%;
  top: 2%;
}

.job_view {
  width: 100%;
  height: 60%;
  background-color: white;
  position: relative;
  top: 2%;
}

.job_nav_view {
  width: 100%;
  height: 10%;
  border: 1px solid #f7f7f7;
  display: flex;
  flex-direction: row;
}

.job_content_view {
  width: 100%;
  height: 90%;
  position: relative;
  top: 2%
}

.item-selected {
  width: 100%;
  height: 100%;
  margin-right: 5%;
  font-size: 12px;
  font-weight: bolder;
  border-bottom: medium solid #ffd887;
  margin-left: 5%;
  text-align: center;
  position: relative;
  top: 10%;
  color: #ff8040;
}

.item {
  width: 100%;
  height: 100%;
  font-size: 12px;
  margin-left: 5%;
  text-align: center;
  /* margin-top: 2%; */
  position: relative;
  top: 10%;
}

.item_text {
  position: relative;
  top: 2%;
}

.job_item_view {
  width: 100%;
  height: 35%;
  border-bottom: 1px solid gainsboro;
  margin-top: 2%
}

.job_item_title_view {
  width: 100%;
  height: 30%;
  display: flex;
  flex-direction: row;
  align-items: center
}

.job_item_middle_view {
  width: 100%;
  height: 35%;
  margin-left: 2%;
  display: flex;
  align-items: center
}

.job_item_bottom_view {
  width: 100%;
  height: 35%;
  display: flex
}
.job_item_title{
  width: 70%;
  height: 100%;
  font-size: 16px;
  font-weight: bold;
  margin-left: 2%
}
.job_item_price{
  width: 30%;
  height: 100%;
  font-size: 14px;
  color: #FF8000
}
.job_icon{
  width: 15px;
  height: 15px;
}
.job_item_middle_view text{
  color: #515151;
  font-size: 12px;
}
.two{
  margin-left: 2%
}
.left{
  width: 80%;
  height: 100%;
  display: flex
}
.right{
  width: 20%;
  height: 100%;
}
.red_view{
  width: 50px;
  height: 20px;
  background-color: #FFEAFF;
  text-align: center;
  font-size: 12px;
  border: 1px solid #FF80C0
}
.green{
  background-color: #DDFFEE;
  border: 1px solid #A2FFA2;
  margin-left: 2%
}
.gray{
  background-color: #f7f7f7;
  border: 1px solid #515151;
  margin-left: 2%
}
.header_sub_view{
  width: 25%;
  height: 50%;
  text-align: center;
  font-size: 12px;
}
.header_icon{
  width: 10px;
  height: 10px;
  margin-left: 5%;  
}