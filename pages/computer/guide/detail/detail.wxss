.top_view {
  width: 100%;
  height: 20%;
  background-color: #ECEAED;
}

.desription_view {
  width: 100%;
  height: 60%;
  margin-top: 5%;
}

.loop_content {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  margin-top: 2%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-content: flex-start;
}

.desription_view_sub_item {
  width: 45%;
  height: 80%;
  background-color: white;
  margin-left: 2%;
  margin-top: 2%;
}

.desription_view_sub_item_images {
  width: 100%;
  height: 100%;
}

.descr_images_view {
  width: 100%;
  height: 60%;
}

.desrc_view {
  width: 100%;
  height: 40%;
}

.origin_price {
  font-size: 10px;
  color: gray;
  text-decoration: line-through;
  text-align: center;
  margin-left: 2%;
}

.discount_price {
  font-size: 10px;
  color: gray;
  text-align: center;
  margin-left: 2%;
}

.now_price {
  font-size: 14px;
  font-weight: bold;
  margin-left: 2%;
  color: red;
}

.discount_item_view {
  width: 30%;
  height: 50%;
  border: 1px solid #8080ff;
  font-size: 8px;
  color: #8080ff;
  margin-left: 2%;
  margin-top: 2%;
  text-align: center;
}

.description_title_view {
  width: 100%;
  height: 40%;
  font-size: 12px;
  margin-left: 2%;
  color: #565656;
}

.discount_view {
  width: 100%;
  height: 30%;
}


.title {
  width: 100%;
  height: 30%;
  text-align: center;
  position: relative;
  top: 20%;
  font-size: 16px;
  line-height: 20px;
}

.content {
  text-align: center;
  width: 100%;
  height: 50%;
  position: relative;
  top: 20%;
  display: flex;
  flex-direction: column;
}

.top_content_text {
  font-size: 10px;
  color: #515151;
}

.more_view text {
  font-size: 10px;
  color: #515151;
  width: 80%;
}

.icon {
  width: 15px;
  height: 15px;
  position: relative;
  top: 5%;
}

.more_view {
  display: flex;
  position: relative;
  top: 5%;
}

.more_image_view {
  margin-left: -10%;
  margin-top: -1%;
}

.top_sub_view {
  width: 90%;
  margin-left: 5%;
  height: 20%;
  background-color: #f6f6f6;
  border-radius: 5px;
  display: flex;
  opacity: 0.7;
  border: 2px solid white;
  margin-top: 2%;
  color: black;
}

.top_sub_image_view {
  width: 15%;
  height: 100%;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.top_sub_content_view {
  width: 75%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* align-items: center; */
}

.top_sub_more_view {
  width: 10%;
  height: 100%;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.top_content_view {
  width: 100%;
  height: 70%;
  display: flex;
  flex-direction: column;
}

.top_icon {
  width: 25px;
  height: 25px;
}

.top_sub_content_view_title {
  font-size: 14px;
}

.top_sub_content_view_desc {
  font-size: 12px;
}
