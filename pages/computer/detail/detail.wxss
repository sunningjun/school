.container {
  width: 100%;
  height: 100%;
}

.header {
  width: 100%;
  height: 5%;
  border-bottom: 1px solid #f0f0f0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  box-sizing: border-box;
  font-size: 14px;
}

.select_view {
  width: 100%;
  height: 10%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  box-sizing: border-box;
}

.scroll_content {
  width: 100%;
  height: 85%;
  background-color: #f4f4f4;

}
.loop{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  box-sizing: border-box;
  flex-wrap: wrap
}

.item_view {
  width: 15%;
  height: 100%;
  display: flex;
  margin-left: 5%;
}
.description_title_view{
  font-size: 12px;
  margin-left: 2%
}

.item_view_selected {
  width: 15%;
  height: 100%;
  display: flex;
  margin-left: 5%;
  color: #ff8080;
  font-weight: bold;
}

.select_item_view {
  width: 20%;
  height: 60%;
  background-color: #f0f0f0;
  position: relative;
  right: -5%;
  top: 20%;
  font-size: 12px;
  display: flex;
  text-align: center;
  border-radius: 2px;
  margin-right: 3%;
}

.select_item_view_text {
  position: relative;
  right: -20%;
  top: 20%;
}

.select_item_view_image {
  position: relative;
  right: -25%;
  top: 20%;
}

.title_image {
  width: 15px;
  height: 12px;
  position: relative;
  left: 15%;
}

.nav_image {
  width: 10px;
  height: 10px;
}
.scroll_content .sub_item {
  width: 45%;
  height: 50%;
  background-color: white;
  margin-left: 2%;
  margin-top: 2%;
}
.scroll_content .sub_item_images {
  width: 100%;
  height: 100%;
}
.middle_more_view{
  margin-top: 10%;
  margin-left: 10%;
}
.scroll_content .title{
  font-size: 14px;
}
.price_view{
  width: 100%;
  height: 30%;
}
.title_view{
  width: 100%;
  height: 40%;
  font-size: 12px;
  margin-left: 2%;
  color: #565656
}
.discount_view{
  width: 100%;
  height: 30%;
}
.images_view{
  width: 100%;
  height: 60%;
}
.desrc_view{
  width: 100%;
  height: 40%;
}
.origin_price {
  font-size: 10px;
  color: gray;
  text-decoration: line-through;
  text-align: center;
  margin-left: 2%;

}
.discount_price{
  font-size: 10px;
  color: gray;
  text-align: center;
    margin-left: 2%;

}
.now_price{
  font-size: 14px;
  font-weight: bold;
  margin-left: 2%;
  color: red
}
.discount_item_view{
  width: 30%;
  height: 50%;
  border: 1px solid #8080FF;
  font-size: 8px;
  color: #8080FF;
  margin-left: 2%;
  margin-top: 2%;
  text-align: center;
}
.header_sub_view{
  width: 20%;
  height: 50%;
  text-align: center;
  position: relative;
  top: 10%;
  font-size: 12px;
}
.header_icon{
  width: 10px;
  height: 10px;
  margin-left: 5%;  
}
