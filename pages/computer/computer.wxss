.container {
  width: 100%;
  height: 100%;
  display: flex;
}

.scroll_content {
  width: 100%;
  height: 100%;
}

.navigator_view {
  width: 25%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #FAFAFA;
  text-align: center;
  font-size: 14px;
}

.content_view {
  width: 75%;
  height: 100%;
}

.content_nav_text_cate_selected {
  position: relative;
  margin-top: 20%;
  text-align: center;
  background-color: white;
  font-weight: bold;
  width: 100%;
  height: 30px;
}

.content_nav_text_cate {
  position: relative;
  /* margin-top: 20%; */
  text-align: center;
  width: 100%;
  height: 30px;
  border-bottom: 1px solid #e6e6e6;
}

.nav_text {
  margin-top: 15%;
}

.scoll_cate {
  width: 100%;
  height: 100%;
}

.image_view {
  width: 100%;
  height: 20%;
}

.content_image {
  width: 95%;
  height: 100%;
  border-radius: 5px;
  margin-left: 2%;
}

.tuijian_image {
  width: 50px;
  height: 50px;
}
.item_title {
  width: 100%;
  height: 20%;
  margin-left: 2%;
  font-size: 12px;
  font-weight: bold;
  margin-top: 10%;
}

.item_content {
  width: 33%;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 2%;
}
.loop_content{
  box-sizing: border-box;
  width: 100%;
  height: 75%;
  margin-top: 5%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-content: flex-start;
}

.tuijian_text {
  font-size: 12px;
}

.tuijian_text_view {
  margin-left: 2%;
  text-align: center;
}

.tuijian_image_view {
  margin-left: 2%;
  text-align: center;
}
.turn_button{
  width: 90%;
  height: 30px;
  background-color: #FFBB77;
  margin-left: 5%;
  border-radius: 2px;
  font-size: 12px;
  text-align: center;
  margin-top: 10%;
  margin-bottom: 10%;
  font-weight: bold
}
.to_brand{
  position: relative;
  top: 20%;
}
.none{
  display: none
}
