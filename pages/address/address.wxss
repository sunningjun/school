.container {
  width: 100%;
  height: 100%;
}

.header {
  width: 100%;
  height: 5%;
}

.header_image {
  width: 100%;
  height: 10px;
}

.content {
  width: 100%;
  height: 85%;
}

.footer {
  width: 100%;
  height: 10%;
  position: fixed;
  bottom: 0;
}

.footer_button {
  width: 90%;
  border: 1px solid red;
  color: red;
  font-size: 14px;
}

.loop {
  width: 100%;
  height: 100%;
}

.address {
  width: 100%;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #e6e6e6;
}

.address .select {
  width: 15%;
  margin-top: 5%;
  margin-left: 2%
}

.address .detail {
  width: 70%;
  display: flex;
  flex-direction: column;
}

.address .image {
  width: 15%;
  /* margin-top: 2%; */
  position: relative;
  left: 5%;
  margin-top: 5%;
}

.address_image {
  width: 20px;
  height: 20px;
}
.address_image_none {
  display: none
}
.detail .name{
  font-size: 16px;
  font-weight: bold
}
.detail .detail_address{
  font-size: 14px;
  color: #8B8B8B
}
