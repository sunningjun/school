
.header{
  width: 100%;
  height: 5%;
  border-bottom: 1px solid #f7f7f7;
  font-size: 14px;
   display: flex;
  flex-direction: row;
  box-sizing: border-box
}
.scroll{
  width: 100%;
  height: 90%;
}
.detail_sub_view{
  width: 100%;
  height: 20%;
  border-bottom: 1px solid #f7f7f7;
  display: flex;
}
.detail_image_view{
  width: 50%;
  height: 100%;
}
.detail_text_view{
  width: 50%;
  height: 100%;
  font-size: 14px;
}
.detail_text_title_view text{
  position: relative;
  top: 10%
}
.buyed_image{
  width: 15px;
  height: 15px;
}
.newPrice{
  color: #FF8040;
  position: relative;
  top: 25%
}
.right{
  width: 60%;
  height: 100%;
  display: flex;
  flex-direction: column
}
.left{
  width: 40%;
  height: 100%;
}
.sub_button{
  width: 90%;
  height: 50%;
  background-color: #FF8040;
  text-align: center;
  border-radius: 5px;
  position: relative;
  top: 25%
}
.sub_button text{
  position: relative;
  top: 15%
}
.content_image{
  width: 90%;
  margin-left: 5%;
  height: 80%;
  margin-top: 5%;
  border-radius: 2px;
}
.detail_text_title_view{
  width: 100%;
  height: 30%;
  margin-top: 5%
}
.detail_text_price_view{
  width: 100%;
  height: 60%;
  display: flex;
  flex-direction: row;
}
.buyed_view text{
  font-size: 12px;
  color: #707070;
  margin-left: 2%;
  margin-top: 2%
}
.buyed_view{
  height: 50%;
  position: relative;
  top: 25%
}
.header_icon{
  width: 10px;
  height: 10px;
  margin-left: 5%;  
}
.header_sub_view{
  width: 33%;
  height: 50%;
  text-align: center;
  position: relative;
  top: 10%;
  font-size: 12px;
}