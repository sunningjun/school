.container {
  background-color: #f7f7f7;
}

.top {
  width: 100%;
  height: 30%;
  background-color: white;
}
.top_title_view{
  width: 100%;
  height: 30%;
  border-bottom: 1px solid #e6e6e6;
  margin-left: 2%
}
.top_content_view{
  width: 100%;
  height: 70%;
  display: flex;
  flex-direction: column;
  font-size: 12px;
  margin-left: 2%;
  color: #515151
}
.sub_content_view{
  width: 100%;
  height: 20%;
  margin-right: 2%;
}
.top_title_view text{
  font-size: 14px;
  font-weight: bold;
  position: relative;
  top: 25%
}

.middle {
  width: 100%;
  height: 10%;
}

.middle text {
  font-size: 12px;
  color: #515151;
  position: relative;
  left: 2%;
  top: 25%;
}

.phone_view {
  width: 100%;
  height: 10%;
  background-color: white;
}

.phone_input {
  color: #515151;
  font-size: 12px;
  position: relative;
  left: 2%;
  top: 25%;
}
.submit_button_view{
  position: relative;
  top: 20%;
  width: 90%;
  height: 10%;
  background-color: #FF8040;
  margin-left: 5%;
  border-radius: 5px;
    text-align: center;

}
.submit_button_view text{
  color: white;
  font-size: 16px;
  position: relative;
  top: 25%;
}